@model Models.Review.TrailReview.TrailReviewDetail

<h2 style="color:#1a394e; font-family: 'Montserrat', sans-serif; font-weight:bold;">Are you sure that you want to delete this review?</h2>
<hr />

<div style="background-color:#91c7de; border:solid 5px #1a394e; color:#1a394e; padding:25px;">
    <dl class="dl-horizontal" style="font-size:1.10em;">
        @Html.HiddenFor(model => model.ReviewId)

        <dt style="font-family: 'Montserrat', sans-serif; font-weight: 900;">
            @Html.DisplayNameFor(model => model.TrailId) :
        </dt>

        <dd style="font-family: 'Roboto Condensed', sans-serif; font-size:1.25em;">
            @Html.DisplayFor(model => model.TrailId)
        </dd>

        <dt style="font-family: 'Montserrat', sans-serif; font-weight: 900;">
            @Html.DisplayNameFor(model => model.Score) :
        </dt>

        <dd style="font-family: 'Roboto Condensed', sans-serif; font-size:1.25em;">
            @Html.DisplayFor(model => model.Score)
        </dd>

        <dt style="font-family: 'Montserrat', sans-serif; font-weight: 900;">
            @Html.DisplayNameFor(model => model.Title) :
        </dt>

        <dd style="font-family: 'Roboto Condensed', sans-serif; font-size:1.25em;">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt style="font-family: 'Montserrat', sans-serif; font-weight: 900;">
            @Html.DisplayNameFor(model => model.Comment) :
        </dt>

        <dd style="font-family: 'Roboto Condensed', sans-serif; font-size:1.25em;">
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt style="font-family: 'Montserrat', sans-serif; font-weight: 900;">
            @Html.DisplayNameFor(model => model.VisitDate) :
        </dt>

        <dd style="font-family: 'Roboto Condensed', sans-serif; font-size:1.25em;">
            @Html.DisplayFor(model => model.VisitDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" style="margin: 5px 0 0 100px;" />
        </div>
    }

</div>

<div style="margin:10px;">
    <a href="javascript:void(0);" onclick="history.go(-1);">Back to List</a>
</div>
